<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Erreur
			{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link
		rel="icon" href="{{ asset('icon/CyClic_favicon.ico') }}">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="error">
		<header class="main_navbar">
			<nav class="CyClic_navbar">
				<a href="{{ path('home') }}"><img src="{{ asset('img/wordmark.png') }}" class="nav_logo"></a>
				<ul class="nav_menu">
					<li>
						<a href="{{path('new_annonce')}}">Publier une annonce</a>
					</li>
					<li>
						<a href="{{path('annonce')}}">Recherche</a>
					</li>
					{% if app.user %}
						<li>
							<a href="#">Messagerie</a>
						</li>
						<li>
							<a href="#" id="userIcon">
								<i class="fas fa-user"></i>
							</a>
							<nav id="userMenu" class="userIconOff">
								<a href="">Profil</a>
								<a href="#">Paramètres</a>
								<a href="#">Déconnexion</a>
							</nav>
						</li>
					{% else %}
						<li>
							<a href="{{ path('app_login') }}">Connexion</a>&nbsp; &middot; &nbsp;<a href="register">Inscription</a>
						</li>
					{% endif %}
				</ul>
			</nav>
		</header>
        <div class="error_code_background">
        <span>{% block errno %}{% endblock %}
        </div>
        <div class="err_container">
            {% block errmsg %}
            {% endblock %}
        </div>
	</body>
</html>